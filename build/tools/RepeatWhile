usage()
{
	echo `basename $0` exit_status count arguments ...
	echo Repeat a command at most \"count\" times while the exit status
	echo of the command is \"exit_status\". If \"count\" is reached,
	echo the last exit status of the command is returned \(which will
	echo be \"exit_status\"\).  The script sleeps for 1 second between
	echo retries.
	exit 1;
}

if [ $# -eq 0 ]; then
	usage
fi

EXIT_STATUS=$1
shift
if [ $# -eq 0 ]; then
	usage
fi

COUNT=$1
shift
if [ $# -eq 0 ]; then
	usage
fi

I=0

until [ $I -eq $COUNT ]
do
	$*
	STATUS=$?
	if [ $STATUS -ne $EXIT_STATUS ]; then
		exit $EXIT_STATUS
	fi
	sleep 1
	let I++
done

exit $STATUS

