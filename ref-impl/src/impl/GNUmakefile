PACKAGE = ref-impl
export PACKAGE

AAFBASE ?= ../../..


# Common definitions
include $(AAFBASE)/build/common.mk

# Turn off error-on-warning behaviour for this directory
# Workaround for "defined but not used" warnings in AAFMetaDictionary.h
# FIXME: remove this once AAFMetaDictionary.h generation is fixed
ifeq ($(CC),g++)
  ADD_CFLAGS += -Wno-error
endif

# Include directories
INCLUDES = -I. \
	   -I../../include/ref-api \
	   -I../../include \
	   -I../../include/platform \
	   -I../../include/OM \
	   -I../../src/OM \
	   -I../../aaflib


.PHONY : all
all : impl


.PHONY : impl
impl : $(OBJDIR) $(LIBDIR) $(LIBDIR)/libimpl$(LIB)


$(LIBDIR)/libimpl$(LIB) : $(CXXOBJS)
	$(LD_STAT_LIB) $@ $(CXXOBJS)


.PHONY : clean
clean :
	@$(RM) $(CXXOBJS)
	@$(RM) $(DEPS)
	@$(RM) $(LIBDIR)/libimpl$(LIB)
	@$(RMDIR) $(OBJDIR)/ii_files


.PHONY : realclean
realclean : clean


include $(AAFBASE)/build/rules.mk

