AAFBASE ?= ../../../..


# Common definitions
include $(AAFBASE)/build/common.mk

# Turn off error-on-warning behaviour for this directory
# Short term workaround for invalid use of offsetof macro in CAAFUnknown.cpp
# FIXME: remove this once CAAFUnknown.cpp is fixed
ifeq ($(CC),g++)
  ADD_CFLAGS += -Wno-error
endif

# Include directories
INCLUDES = -I../../../include/ref-api \
	   -I../../../include/OM \
	   -I../../../src/OM \
	   -I../../../include -Icom-dll \
	   -I../../../include/platform \
	   -I../test -I.. -I. -I../../impl


.PHONY : all
all : com-dll


.PHONY : com-dll
com-dll : $(OBJDIR) $(LIBDIR) $(CXXOBJS)


.PHONY : clean
clean:
	@$(RM) $(CXXOBJS)
	@$(RM) $(DEPS)
	@$(RMDIR) $(OBJDIR)/ii_files


.PHONY : realclean
realclean : clean


include $(AAFBASE)/build/rules.mk

